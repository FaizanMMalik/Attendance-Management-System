
@{
    ViewBag.Title = "AForm";
}

<h2>AForm</h2>
@model  IEnumerable<proj2mvc.Models.Functions>
@{
    ViewBag.Title = "Contacts";
}
<html>
<h2>Contacts</h2>
<body>
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.absno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reason)
            </th>


        </tr>
        @if (Model != null && Model.Count() > 0)
        {

            foreach (var item in Model)
            {
                using (Html.BeginForm("DeleteA", "Abs", new
                {
                    id = item.AID
                }))
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.absno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reason)
        </td>
        <td>
          
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return
                                confirm('Are you sure you want to delete this record?');" />
        </td>
    </tr>

                }
            }
        }
        else
        {
            <tr>
                <td colspan="10">
                    No Record Found
                </td>
            </tr>
        }
    </table>
</body>
</html>

